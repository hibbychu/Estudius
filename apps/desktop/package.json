{
  "name": "desktop",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "electron": "electron dist-electron/main.js",
    "dev": "concurrently \"vite\" \"cross-env NODE_ENV=development npm run electron\" \"npm run eye-detect\"",
    "build": "vite build",
    "dist": "electron-builder",
    "preview": "vite preview",
    "build:main": "tsc -p tsconfig.electron.json",
    "build:all": "npm run build && npm run build:main",
    "eye-detect": "python ../backend/app/eye_detector.py"
  },
  "build": {
    "appId": "com.yourcompany.estudius",
    "productName": "Estudius",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@emnapi/core": "^1.4.5",
    "@emnapi/runtime": "^1.4.5",
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
