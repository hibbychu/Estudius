{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",       // For ES module syntax, or "CommonJS" if you want CJS
    "jsx": "react-jsx",   
    "moduleResolution": "Node",
    "outDir": "dist-electron",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["electron/**/*.ts", "src"]
}
